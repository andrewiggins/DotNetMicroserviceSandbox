<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/spectre.css" />
    <link rel="stylesheet" href="~/lib/spectre-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="header container">
        <nav class="navbar">
            <div class="navbar-section">
                <a class="navbar-brand text-bold mr-2" asp-area="" asp-page="/Index">WebApp</a>
                <a class="btn btn-link" asp-area="" asp-page="/Index">Home</a>
            </div>
            <div class="navbar-section">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </div>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - WebApp
        </div>
    </footer>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <script type="text/javascript">
            window.serverAccount = {
                login_hint: "@User.Identity?.Name"
            };
        </script>
    }
    <script src="~/lib/msal-browser.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>